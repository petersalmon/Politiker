<body>

  <%  if(flashMsg.length > 0){ %>
    <div style="text-align: center" class="alert alert-<%= flashType %>">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flashMsg %>
    </div>
  <% } %>

  <div class="login-page">
    <div class="form">

      <form class="login-form" action="/Politiker/password-reset %>" method="POST">

        <img src="/img/logo.png" alt="" class="d-inline-block align-middle mr-2">

        <h3>Forgot Password</h3>

        <br>
        <label for="email">Email: <input type="email" id="email" name="email" required></label>

        <button type="submit">Submit</button>
        <br>
        <br>
        <br>
        <br>

      </form>
    </div>
  </div>

